<?php
$x = rand(0,3);
echo "Число ".$x;
echo PHP_EOL . '<br>';

do{
	$a = 1;
	$b = 1;
    if($a > $x || $b > $x) {
        echo 'задуманное число НЕ входит в числовой ряд';
    }elseif($a == $x || $b == $x) {
        echo 'задуманное число входит в числовой ряд';
	}else{
    $c = $a;
    $c = $c + $x;
    $x = $c;
    echo 'задуманное число НЕ входит в числовой ряд';  
	}
}while($a > $x);

?>
